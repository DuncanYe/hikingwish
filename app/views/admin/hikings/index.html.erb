<br>
<div class="container">
  <div class="row">
    <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>路線名稱</th>
        <th>難度</th>
        <th>天數</th>
        <th>公里數</th>
        <th>#</th>
      </tr>
    </thead>
    <tbody>
      <% @hikings.each do |hiking| %>
      <tr>
        <th scope="row"><%= hiking.name %></th>
        <td><%= hiking.level %></td>
        <td><%= hiking.day %></td>
        <td><%= hiking.miles %></td>
        <td>
          <%= link_to 'Edit', edit_admin_hiking_path(hiking) %>
          
          
          <%= link_to 'Delete', admin_hiking_path(hiking), method: :delete, data: { confirm: "Are you sure?"} %>  
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>