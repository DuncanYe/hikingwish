<br>
<div class="container">
  <div class="row">
    <table class="table table-striped table-bordered">
      <h2>所有路線</h2>
    <thead>
      <tr>
        <th>路線名稱</th>
        <th>難度</th>
        <th>天數</th>
        <th>公里數</th>
      </tr>
    </thead>
    <tbody>
      <% @hikings.each do |hiking| %>
      <tr>
        <th scope="row"><%= hiking.name %></th>
        <td><%= hiking.level %></td>
        <td><%= hiking.day %></td>
        <td><%= hiking.miles %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>